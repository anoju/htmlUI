{
  "liveServer.settings.port": 6900,
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "~/../css/"
    }
  ],
  "liveSassCompile.settings.autoprefix": [
    "> 2%",
    "last 2 versions"
  ],
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "HookyQR.beautify",
  "beautify.ignore": [
    "**/node_modules/*",
    "**/*.min.*",
    "**/lib/*",
    "_font.scss",
    "front.scss",
  ],
  "beautify.language": {
    "js": {
      "type": [
        "javascript",
        // "json"
      ],
      "filename": [
        ".jsbeautifyrc"
      ],
    },
    "css": [
      "scss"
    ],
    "html": [
      "htm",
      "html"
    ],
  },
  "imageSprites.settings": {
    "padding": 0,
    "orientation": "vertical",
    "stylesheet": "scss",
    "output": "png"
  }
}